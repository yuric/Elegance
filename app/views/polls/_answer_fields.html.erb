<fieldset>
  <div class="well">
    <div class="control-group">
      <%= f.label :content, "Answer #{i}", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :content, :class => 'text_field' %>
        <%= f.hidden_field :_destroy %>
        <%= link_to "remove", '#', class: "remove_fields" %>
      </div>
    </div>
  </div>
</fieldset>
