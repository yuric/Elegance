<%Poll.all.each do |poll|%>
  
  <div class="alert alert-info">
    <strong>Question:</strong><%="#{poll.question}\n"%>
  </div>
  <% poll.answers.each do |answer|%>
    <div class="well">
  
      <%="\t#{answer.content}"%> (<%="#{answer.votes.count}\n"%> votes)
      <div class="progress progress-striped active">
        <div class="bar" style="width: <%=answer.votes.count%>1%;"></div>
      </div>
    </div>
  <%end%>
<%end%>



















